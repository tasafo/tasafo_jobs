<nav>
  <% if @resume.persisted? %>
    <%= link_to t("resumes.back_to_my_resume"), resume_path(@resume) %>
  <% else %>
    <%= link_to t("resumes.back_to_all_resumes"), resumes_path %>
  <% end %>
</nav>

<h1><%= t("resumes.edit_title") %></h1>

<%= form_for @resume, method: :put, url: resumes_path do |f| %>
  <% if @resume.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @resume.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <legend><%= t(:general_info) %></legend>

      <div class="form-group">
        <%= f.label :category_id %>
        <%= f.select :category_id, categories_for_select(@resume), {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>


      <div class="form-group">
        <%= f.label :location %>
        <%= f.text_field :location, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.check_box :available %>
        <%= f.label :available, t("resumes.available_placeholder") %>
      </div>

      <div class="form-group">
        <%= f.check_box :listed %>
        <%= f.label :listed, t("resumes.listed_placeholder") %>
      </div>
    </div>

    <div class="col-md-6">
      <legend><%= t(:contact) %></legend>

      <div class="form-group">
        <%= f.label :site_url %> <i><%= t("http_reminder") %></i>
        <%= f.url_field :site_url, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :contact_email %>
        <%= f.email_field :contact_email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :facebook_url %> <i><%= t("http_reminder") %></i>
        <%= f.url_field :facebook_url, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :twitter_url %> <i><%= t("http_reminder") %></i>
        <%= f.url_field :twitter_url, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :google_plus_url %> <i><%= t("http_reminder") %></i>
        <%= f.url_field :google_plus_url, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :linked_in_url %> <i><%= t("http_reminder") %></i>
        <%= f.url_field :linked_in_url, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :phone %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>
    </div>
  </div>

  <legend><%= t("description") %></legend>
  <div class="form-group">
    <%= f.text_area :description, class: "form-control", rows: 15 %>
  </div>

  <div class="actions">
    <%= f.submit t("resumes.save"), class: "btn btn-primary" %>

    <% if @resume.persisted? %>
      or
      <%= link_to t(:cancel), resume_path(@resume) %>
    <% end %>
  </div>
<% end %>
